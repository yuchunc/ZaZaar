<section class="section stream">

  <div class="container">

    <!-- 正在直播 -->
    <%= if @first_video.fb_status == :live do %>
      <%= render @view_module, "current_video.html", live_stream: @first_video %>
    <% end %>

    <!-- 過去直播 -->
    <div class="columns is-flex-wrap">
      <%= render_many(@videos, @view_module, "past_video.html", as: :video) %>
    </div>

  </div>
</section>
